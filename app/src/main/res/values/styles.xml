<resources>

    <!-- Base application theme. -->
    <!-- Fix colors -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/DraculaColorPrimary</item>
        <item name="colorPrimaryDark">@color/DraculaColorPrimaryDark</item>
        <item name="colorAccent">@color/DraculaColorAccent</item>
        <!-- application views attributes to override with specific colors -->
        <item name="android:colorBackground">@color/DraculaBackground</item>
        <item name="android:colorForeground">@color/DraculaForeground</item>
        <item name="android:textColor">@color/DraculaForeground</item>
        <item name="colorButtonNormal">@color/DraculaForeground</item>
        <item name="colorControlActivated">?attr/colorAccent</item>
        <item name="colorControlHighlight">@color/DraculaColorPrimaryDark</item>
        <item name="colorControlNormal">?android:attr/textColorSecondary</item>
        <item name="colorSwitchThumbNormal">@color/DraculaForeground</item>
        <item name="controlBackground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:textColorPrimary">@color/DraculaTextColorPrimary</item>
        <item name="android:textColorPrimaryInverse">@color/DraculaTextColorTertiary</item>
        <item name="android:textColorSecondary">@color/DraculaTextColorSecondary</item>
        <item name="android:textColorSecondaryInverse">@color/DraculaTextColorTertiary</item>
        <item name="android:windowBackground">@color/DraculaBackground</item>
    </style>

    <!-- general frequently used attributes for specific views -->
    <style name="TextViewStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_12_sp</item>
        <item name="android:layout_marginTop">@dimen/padding_5_dp</item>
        <item name="android:layout_marginLeft">@dimen/padding_10_dp</item>
        <item name="android:layout_marginRight">@dimen/padding_10_dp</item>
        <item name="android:layout_marginBottom">@dimen/padding_5_dp</item>
    </style>

    <style name="TextViewTitleStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_14_sp</item>
        <item name="android:layout_marginTop">@dimen/padding_5_dp</item>
        <item name="android:layout_marginLeft">@dimen/padding_10_dp</item>
        <item name="android:layout_marginRight">@dimen/padding_10_dp</item>
        <item name="android:layout_marginBottom">@dimen/padding_5_dp</item>
    </style>

    <style name="IconViewStyle">
        <item name="android:layout_width">@dimen/width_30</item>
        <item name="android:layout_height">@dimen/height_30</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_margin">5dp</item>
    </style>

</resources>
